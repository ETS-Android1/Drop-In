<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ViewProfile">

    <ImageView
        android:id="@+id/user_pfp"
        android:layout_alignParentStart="true"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:contentDescription="@+id/user_pfp"
        android:elevation="2dp"
        android:visibility="visible"
        app:srcCompat="@drawable/grey_background_circle"/>

    <ImageView
        android:id="@+id/setup_profile_img"
        android:layout_alignParentEnd="true"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:contentDescription="@+id/setup_profile_img"
        android:elevation="2dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/purple_gear" />

    <Button
        android:id="@+id/setup_profile"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@+id/setup_profile"
        android:elevation="2dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/curved"
        android:gravity="center"
        android:text="@string/user_name"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/biography_text"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/user_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/biography_text"
        android:textColor="@color/text"
        android:textSize="45sp" />

    <EditText
        android:id="@+id/biography"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/biography_text"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/curved"
        android:gravity="center"
        android:hint="@string/biography"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColor="@color/text"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/video_games_played_text"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/biography"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/video_games_played_text"
        android:textColor="@color/text"
        android:textSize="45sp" />

    <ImageView
        android:id="@+id/game_1"
        android:layout_width="76dp"
        android:layout_height="65dp"
        android:layout_below="@id/video_games_played_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:contentDescription="@+id/game_1"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/elden_ring_game_image" />

    <ImageView
        android:id="@+id/game_2"
        android:layout_width="76dp"
        android:layout_height="65dp"
        android:layout_below="@id/video_games_played_text"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/game_1"
        android:contentDescription="@+id/game_2"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/video_games_played_text"
        app:srcCompat="@drawable/fortnite_game_image" />

    <ImageView
        android:id="@+id/game_3"
        android:layout_width="76dp"
        android:layout_height="65dp"
        android:layout_below="@id/video_games_played_text"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/game_2"
        android:contentDescription="@+id/game_3"
        android:visibility="invisible"
        app:srcCompat="@drawable/apex_legends_game_image" />

    <ImageView
        android:id="@+id/game_4"
        android:layout_width="76dp"
        android:layout_height="65dp"
        android:layout_below="@id/video_games_played_text"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/game_3"
        android:contentDescription="@+id/game_4"
        android:visibility="invisible"
        app:srcCompat="@drawable/callofduty_warzone_game_image" />

    <TextView
        android:id="@+id/outside_interest_text"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/game_1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/outside_interest_text"
        android:textColor="@color/text"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/interest_1"
        android:layout_width="102dp"
        android:layout_height="50dp"
        android:layout_below="@id/outside_interest_text"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/button"
        android:gravity="center"
        android:text="@string/interest_1"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="34sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/interest_2"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_below="@id/outside_interest_text"
        android:layout_toEndOf="@id/interest_1"
        android:backgroundTint="@color/button"
        android:gravity="center"
        android:text="@string/interest_2"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="34sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/interest_3"
        android:layout_below="@id/outside_interest_text"
        android:layout_toEndOf="@id/interest_2"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/button"
        android:gravity="center"
        android:text="@string/interest_3"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="34sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/interest_4"
        android:layout_width="101dp"
        android:layout_height="50dp"
        android:layout_below="@id/outside_interest_text"
        android:layout_toEndOf="@id/interest_3"
        android:backgroundTint="@color/button"
        android:gravity="center"
        android:text="@string/interest_4"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="34sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/rate_txt"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/interest_1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/rate_txt"
        android:textColor="@color/text"
        android:textSize="45sp" />

    <Button
        android:id="@+id/star_btn_3"
        android:layout_below="@id/rate_txt"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/star_image_3"
        android:layout_below="@id/rate_txt"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/empty_star"
        android:contentDescription="@+id/star_image_3" />

    <Button
        android:id="@+id/star_btn_2"
        android:layout_alignParentStart="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/star_image_3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="115dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/star_image_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/star_image_3"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:contentDescription="@+id/star_image_2"
        app:srcCompat="@drawable/empty_star" />

    <Button
        android:id="@+id/star_btn_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/star_image_3"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="120dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/star_image_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="115dp"
        android:layout_below="@id/star_image_3"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="120dp"
        android:contentDescription="@+id/star_image_4"
        app:srcCompat="@drawable/empty_star" />

    <Button
        android:id="@+id/star_btn_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/star_image_2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/star_image_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/star_image_2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:contentDescription="@+id/star_image_1"
        app:srcCompat="@drawable/empty_star" />

    <Button
        android:id="@+id/star_btn_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/star_image_4"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/star_image_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/star_image_4"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp"
        android:contentDescription="@+id/star_image_5"
        app:srcCompat="@drawable/empty_star" />

    <Button
        android:id="@+id/poke_btn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/star_image_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@+id/poke_btn"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/poke_btn_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/star_image_3"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@+id/poke_btn_image"
        app:srcCompat="@drawable/purple_poke_view_image" />

    <TextView
        android:id="@+id/poke_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/poke_btn_image"
        android:contentDescription="@+id/poke_txt"
        android:text="@string/poke_txt"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="30sp" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="113dp"
        android:layout_height="56dp"
        android:layout_below="@id/star_image_3"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/button"
        android:contentDescription="@+id/logout_btn"
        android:gravity="center"
        android:text="@string/logout_btn"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:visibility="gone" />

</RelativeLayout>
