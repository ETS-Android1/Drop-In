<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Discover">

    <TextView
        android:id="@+id/discover_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/curved"
        android:text="@string/discover_text"
        android:textColor="@color/text"
        android:textSize="70sp" />

    <ImageView
        android:id="@+id/drop_in_logo"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_width="153dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/drop_in_logo"
        android:contentDescription="@+id/drop_in_logo" />

    <Button
        android:id="@+id/summary_1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/discover_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/button"
        android:background="@color/transparent" />

    <ImageView
        android:id="@+id/pfp_1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/discover_text"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:elevation="2dp"
        app:srcCompat="@drawable/grey_background_circle"
        android:contentDescription="@+id/pfp_1" />

    <TextView
        android:id="@+id/user_1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/discover_text"
        android:layout_toEndOf="@id/pfp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="2dp"
        android:text=" "
        android:textColor="@color/text"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/game_1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_1"
        android:layout_toEndOf="@id/pfp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:text=" "
        android:textColor="@color/text"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/interest_1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/game_1"
        android:layout_toEndOf="@id/pfp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:text=" "
        android:textColor="@color/text"
        android:textSize="24sp" />

    <Button
        android:id="@+id/summary_2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/summary_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
