<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layoutDescription="@xml/activity_log_in_scene3"
    tools:context=".LogIn">

    <ImageView
        android:id="@+id/drop_in_logo"
        android:layout_centerHorizontal="true"
        android:layout_width="349dp"
        android:layout_height="228dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/drop_in_logo"
        app:srcCompat="@drawable/drop_in_logo" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="227dp"
        android:layout_height="156dp"
        android:layout_alignStart="@id/drop_in_logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:rotation="-37"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/text"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/log_in_text"
        android:layout_width="215dp"
        android:layout_height="81dp"
        android:layout_below="@id/drop_in_logo"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/log_in_text"
        android:textColor="@color/text"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/user_email"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_width="221dp"
        android:layout_height="56dp"
        android:layout_below="@id/log_in_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/curved"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="24sp"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/user_password"
        style="@style/Widget.Material3.TextInputEditText.FilledBox.Dense"
        android:layout_width="221dp"
        android:layout_height="56dp"
        android:layout_below="@id/user_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/curved"
        android:ems="10"
        android:hint="@string/user_password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="24sp"
        tools:ignore="Autofill" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="113dp"
        android:layout_height="56dp"
        android:layout_below="@+id/user_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:backgroundTint="@color/button"
        android:text="@string/login_btn"
        android:textAlignment="center"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/signup_new_btn"
        android:layout_width="113dp"
        android:layout_height="56dp"
        android:layout_below="@+id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:backgroundTint="@color/button"
        android:text="@string/signup_new_btn"
        android:textColor="@color/text"
        tools:ignore="DuplicateSpeakableTextCheck" />

</RelativeLayout>